<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/toLessons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/dark_green"
        android:onClick="onLessonsButtonClick"
        android:text="Lessons"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/toReviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/dark_green"
        android:onClick="onReviewsButtonClick"
        android:text="Reviews"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/toLessons"
        app:layout_constraintStart_toEndOf="@+id/toLessons"
        app:layout_constraintTop_toTopOf="@+id/toLessons" />

    <TextView
        android:id="@+id/okText"
        android:layout_width="358dp"
        android:layout_height="299dp"
        android:layout_marginEnd="60dp"
        android:text="OK"
        android:textColor="@color/dark_green"
        android:textSize="10pt"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/toReviews"
        app:layout_constraintStart_toStartOf="@+id/toLessons"
        app:layout_constraintTop_toBottomOf="@+id/toReviews" />

</androidx.constraintlayout.widget.ConstraintLayout>
